                    @Html.ActionLink("Yemek", "Index", "Yemeks", new { area = "" }, new { @class = "navbar-brand" })
                    @Html.ActionLink("Hakkımızda", "Index", "Hakkimizdas", new { area = "" }, new { @class = "navbar-brand" })
                    @Html.ActionLink("BasındaBiz", "Index", "BasindaBizs", new { area = "" }, new { @class = "navbar-brand" })
                    @Html.ActionLink("Rezervasyon", "Index", "Rezervasyons", new { area = "" }, new { @class = "navbar-brand" })
                }
                else
                {
                    @Html.ActionLink("Yemek Kayıt", "Index", "Yemeks/Create", new { area = "" }, new { @class = "navbar-brand" })
                    @Html.ActionLink("Basın Kayıt", "Index", "BasindaBizs/Create", new { area = "" }, new { @class = "navbar-brand" })
                    @Html.ActionLink("Hakkımızda Kayıt", "Login", "Hakkimizdas/Create", new { area = "" }, new { @class = "navbar-brand" })
                    @Html.ActionLink("BasınGör", "BasinGör", "BasindaBizs", new { area = "" }, new { @class = "navbar-brand" })
                    @Html.ActionLink("YemekGör", "YemekGör", "Yemeks", new { area = "" }, new { @class = "navbar-brand" })
                    @Html.ActionLink("HakkımızdaGör", "HakkimizGör", "Hakkimizdas", new { area = "" }, new { @class = "navbar-brand" })
                    @Html.ActionLink("RezervasyonGör", "RezervasyonGör", "Rezervasyons", new { area = "" }, new { @class = "navbar-brand" })
                    @Html.ActionLink("Çıkış Yap", "Logout", "Auth", new { area = "" }, new { @class = "navbar-brand" })






                }
            </div>
